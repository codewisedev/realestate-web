<% contentFor('style') %>
<link rel="stylesheet" href="/css/imagepicker.css" />
<link rel="stylesheet" href="/css/ckeditor.css" />
<script src="/plugins/ckeditor5/build/ckeditor.js"></script>

<% contentFor('body') %>
<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>ارسال تیکت</h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-left">
					<li class="breadcrumb-item"><a href="#">پشتیبانی</a></li>
					<li class="breadcrumb-item active">ارسال تیکت</li>
				</ol>
			</div>
		</div>
	</div>
</section>

<section class="card">
	<!--? Card Body -->
	<div class="card-body">
		<form class="form-horizontal content" action="/agent/ticket/create?_csrf=<%= req.csrfToken() %>" method="POST"
			enctype="multipart/form-data">
			<%- include(viewPath('layouts/errors')) -%>

			<input name="title" type="text" class="form-control formObject" placeholder="* عنوان"
				value="<%= complete('title') %>" />

			<div class="fileUpload upload-btn btn width100">
				<span id="uploadText">ارسال فایل</span>
				<input type="file" class="uploadfile" name="file" />
			</div>

			<!--? Blog Picture -->
			<div class="form-horizontal">
				<div class="form-group">
					<label class="control-label col-md-3">
						ارسال تصویر
						<p id="pic-danger" class="pic-danger"></p>
					</label>
					<div class="col-md-12">
						<div id="image" class="row"></div>
					</div>
				</div>
			</div>
			<!--! Blog Picture -->

			<textarea name="content" class="form-control formObject" id="editor" placeholder="* متن...">
				<%= complete('content') %>
			</textarea>

			<!--? Blog Text Counter -->
			<div class="demo-update">
				<div class="demo-update__controls">
					<span class="demo-update__words"></span>
					<svg class="demo-update__chart" viewbox="0 0 40 40" width="60" height="60"
						xmlns="http://www.w3.org/2000/svg">
						<circle stroke="hsl(0, 0%, 93%)" stroke-width="3" fill="none" cx="20" cy="20" r="17" />
						<circle class="demo-update__chart__circle" stroke="hsl(202, 92%, 59%)" stroke-width="3"
							stroke-dasharray="134,534" stroke-linecap="round" fill="none" cx="20" cy="20" r="17" />
						<text class="demo-update__chart__characters" x="50%" y="50%" dominant-baseline="central"
							text-anchor="middle"></text>
					</svg>
				</div>
			</div>
			<!--! Blog Text Counter -->

			<button style="margin-top: 10px;" type="submit" class="btn btn-danger">
				ثبت
			</button>
		</form>
	</div>
	<!--! Card Body -->
</section>

<% contentFor('script') %>
<script src="/js/image-picker.js"></script>
<script src="/js/ckeditor.js"></script>

<script type="text/javascript">
	//* Image Picker Config
	$(function () {
		$('#image').spartanMultiImagePicker({
			fieldName: 'images',
			maxCount: 3,
			rowHeight: '200px',
			groupClassName: 'col-md-4',
			maxFileSize: '1000000', // 1MB Max Image Size
			placeholderImage: {
				image: '/images/placeholder.png',
				width: '100%',
			},
			dropFileLabel: 'Drop Here',
			onAddRow: function (index) {
				console.log(index);
			},
			onRenderedPreview: function (index) {
				console.log(index);
				document.getElementById('pic-danger').style.display = 'none';
			},
			onRemoveRow: function (index) {
				console.log(index);
			},
			onExtensionErr: function (index, file) {
				console.log(index, file, 'extension err');
				document.getElementById('pic-danger').style.display = 'block';
				document.getElementById('pic-danger').innerHTML =
					'لطفا فرمت های JPG یا PNG را وارد نمایید';
			},
			onSizeErr: function (index, file) {
				console.log(index, file, 'file size too big');
				document.getElementById('pic-danger').style.display = 'block';
				document.getElementById('pic-danger').innerHTML =
					'حجم فایل بیشتر از 1 مگابایت می باشد';
			},
		});
	});

	//* CkEditor Config
	ckEditor(0);

	$(document).ready(function ($) {
		// Upload btn on change call function
		$('.uploadfile').change(function () {
			var filename = readURL(this);
			$(this).parent().children('span').html(filename);
		});

		// Read File and return value
		function readURL(input) {
			var url = input.value;
			var ext = url.substring(url.lastIndexOf('.') + 1).toLowerCase();
			if (input.files && input.files[0] && (ext == 'docx' || ext == 'pdf')) {
				var path = $(input).val();
				var filename = path.replace(/^.*\\/, '');
				$('#uploadText').css('color', 'var(--primary)');
				return filename;
			} else {
				$(input).val('');
				$('#uploadText').css('color', 'var(--red)');
				return 'فقط فرمت های docx و pdf پشتیبانی می شود';
			}
		}
	});
</script>