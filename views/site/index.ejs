	function exchange() {
		$('#transactionType').val('5');
		$('#minPrice').attr("placeholder", "کم ترین قیمت");
		$('#maxPrice').attr("placeholder", "بیشترین قیمت");
	}

	function participation() {
		$('#transactionType').val('16');
		$('#minPrice').attr("placeholder", "کم ترین قیمت");
		$('#maxPrice').attr("placeholder", "بیشترین قیمت");
	}

	$('#map').hide();
	$(".collaps").click(function () {
		$('#map').toggle("slow");
	});
</script>