		if (marker != null)
			myMap.removeLayer(marker)
		marker = new L.Marker(e.latlng).addTo(myMap);
		document.getElementById("latlon").value = e.latlng.lat + '-' + e.latlng.lng;
	});

	$('[data-mask]').inputmask();

	const CITY_URL = '/city?_csrf=<%= req.csrfToken() %>';
	const REGION_URL = '/region?_csrf=<%= req.csrfToken() %>';

	$('#state').change(async () => {
		if ($('#state option:selected').val() === 'none') {
			$('#city option').remove();
			$('#region option').remove();
		} else {
			$('#region option').remove();
			$('#city option').remove();
			let stateId = $('#state option:selected').val();
			await postData(CITY_URL, {
				id: stateId
			}).then((data) => {
				$('#city').append('<option value="none">انتخاب شهر</option>');
				data.map((city) => {
					$('#city').append(`<option value="${city._id}">${city.title}</option>`);
				});
			});
		}
	});

	$('#city').change(async () => {
		if ($('#city option:selected').val() === 'none') {
			$('#region option').remove();
		} else {
			let cityId = $('#city option:selected').val();
			$('#region option').remove();
			await postData(REGION_URL, {
				id: cityId
			}).then((data) => {
				$('#region').append('<option value="none">انتخاب ناحیه</option>');
				data.map((region) => {
					$('#region').append(
						`<option value="${region._id}">${region.title}</option>`);
				});
			});
		}
	});

	function sale() {
		$('#transactionType').val('1');
		$('#minPrice').attr("placeholder", "کم ترین قیمت");
		$('#maxPrice').attr("placeholder", "بیشترین قیمت");
	}

	function mortgage() {
		$('#transactionType').val('2');
		$('#minPrice').attr("placeholder", "کم ترین پول پیش");
		$('#maxPrice').attr("placeholder", "بیشترین پول پیش");
	}

	function rent() {
