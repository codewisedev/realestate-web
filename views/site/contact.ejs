<!--? Inner Heading Start -->
<div class="innerHeading contactHeading">
    <div class="container">
        <h1>تماس با ما</h1>
    </div>
</div>
<!--! Inner Heading End -->

<!--? Inner Content Start -->
<div class="innercontent wow fadeInUp">
    <div class="container">
        <div class="getTouch">با ما تماس بگیرید</div>
        <div class="row formcol">
            <div class="col-lg-8">
                <form class="form mb-md50" action="/contact?_csrf=<%= req.csrfToken() %>" method="POST">
                    <div class="controls">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group has-error has-danger">
                                    <input class="form-control" type="text" name="name"
                                        placeholder="نام و نام خانوادگی" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input class="form-control" type="email" name="email" placeholder="ایمیل" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input class="form-control" type="text" name="phone" placeholder="شماره تماس">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input class="form-control" type="text" name="subject" placeholder="موضوع">
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <textarea class="form-control" name="message" placeholder="متن پیام"
                                        rows="4"></textarea>
                                </div>
                            </div>
                            <div class="col-lg-12 contact-wrap">
                                <div class="contact-btn">
                                    <button type="submit" class="sub">
                                        ارسال
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-4">
                <div class="map">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d808.9195933335718!2d50.98573462919932!3d35.80782839876031!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3f8dbfc380c3b29b%3A0x20eb4863cc1d181d!2sShahtoot%20System%20Company!5e0!3m2!1sen!2s!4v1600330797435!5m2!1sen!2s"
                        width="100%" height="330" frameborder="0" style="border:0" allowfullscreen=""></iframe>
                </div>
            </div>
        </div>
    </div>
</div>
<!--! Inner Content End -->