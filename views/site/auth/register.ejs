<% contentFor('style') %>
<style>
  .close {
    float: left !important;
    margin-right: 10px;
  }
</style>

<% contentFor('body') %>
<!--? Inner Heading Start -->
<div class="innerHeading registerHeading">
  <div class="container">
    <h1>ثبت نام</h1>
  </div>
</div>
<!--! Inner Heading End -->

<!--? Inner Content Start -->
<div class="innercontent">
  <div class="container auth-wrap">
    <%- include(viewPath('layouts/errors')) -%>
    <div class="card mx-auto loginForm">
      <div class="card-body">
        <form action="/register?_csrf=<%= req.csrfToken() %>" method="POST">
          <a href="/google" class="btn btn-primary btn-block google_plus mb-4">
            <i class="fab fa-google-plus-g"></i> &nbsp;
            ورود با گوگل
          </a>
          <div class="form-group">
            <input type="text" name="name" class="form-control" placeholder="نام و نام خانوادگی" />
          </div>
          <div class="form-group">
            <input type="text" name="mobile" class="form-control" placeholder="شماره موبایل" dir="ltr">
          </div>
          <div class="form-group">
            <input type="password" name="password" class="form-control" placeholder="کلمه عبور" dir="ltr">
          </div>
          <div class="form-group">
            <%- recaptcha %>
          </div>
          <div class="form-group">
            <button type="submit" class="btn login_btn btn-primary btn-block">ثبت نام</button>
          </div>
        </form>
      </div>
    </div>
    <p class="text-center mt-4">قبلاً ثبت نام کردید؟ <a href="/login">وارد شوید</a></p>
  </div>
</div>
<!--! Inner Content End -->