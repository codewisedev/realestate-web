<% contentFor('style') %>
<link rel="stylesheet" href="/plugins/datatables/dataTables.bootstrap4.css" />
<link rel="stylesheet" href="/css/table.css" />
<link rel="stylesheet" href="/css/modal.css" />

<% contentFor('body') %>
<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>مدیریت شهر ها</h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-left">
					<li class="breadcrumb-item"><a href="#">مدیریت مناطق</a></li>
					<li class="breadcrumb-item active">مدیریت شهر ها</li>
				</ol>
			</div>
		</div>
	</div>
</section>

<section class="card">
	<div class="card-header">
		<h3 class="card-title">
			لیست شهر ها
			<a href="#" class="btn btn-sm btn-success card-btn" data-toggle="modal" data-target="#CityModal">
				<span>
					<i class="fa fa-plus"></i>
				</span>
				شهر جدید
			</a>

			<!--? Create City Modal -->
			<div class="modal fade" id="CityModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
				aria-hidden="true">
				<div class="modal-dialog modal-dialog-centered" role="form">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="exampleModalLabel">ثبت شهر جدید</h5>
							<button type="button" class="close modal-close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body">
							<form action="/admin/location/city" method="POST">
								<input type="hidden" name="_csrf" value="<%= req.csrfToken() %>" />
								<div class="form-group">
									<label for="recipient-name" class="col-form-label">
										عنوان
									</label>
									<input type="text" name="title" class="form-control" id="recipient-name" />
								</div>
								<label for="select-state" class="col-form-label">
									نام استان
								</label>
								<select id="select-state" class="form-control select-state" name="state"
									style="margin-bottom: 20px;">
									<% states.forEach(state => { %>
									<option value="<%= state._id %>"><%= state.title %></option>
									<% }) %>
								</select>
								<button type="submit" class="btn btn-primary">ثبت</button>
								<button type="button" class="btn btn-danger" data-dismiss="modal">
									بستن
								</button>
							</form>
						</div>
					</div>
				</div>
			</div>
			<!--! Create City Modal -->
		</h3>
	</div>

	<!--? Card Body -->
	<div class="card-body">
		<div class="search-wrapper">
			<div class="input-holder">
				<input id="search" type="text" class="search-input" placeholder="جستجو در جدول..." />
				<button class="search-icon" onclick="searchToggle(this, event);">
					<span></span>
				</button>
			</div>
			<span class="close" onclick="searchToggle(this, event);"></span>
			<div class="result-container"></div>
		</div>
		<table id="table" class="table table-bordered table-striped display responsive nowrap dt-center">
			<thead>
				<tr>
					<th>عنوان</th>
					<th>لیست ناحیه ها</th>
					<th>وضعیت</th>
					<th>تنظیمات</th>
				</tr>
			</thead>
			<tbody>
				<% cities.forEach(city => { %>
				<tr>
					<td><%= city.title %></td>
					<td>
						<button type="button" class="btn btn-info" data-toggle="modal"
							data-target="#modal_<%= city._id %>">
							نمایش ناحیه ها
						</button>

						<div class="modal fade" id="modal_<%= city._id %>" tabindex="-1" role="dialog"
							aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
							<div class="large-modal-dialog modal-dialog modal-dialog-centered" role="document">
								<div class="large-modal-content modal-content">
									<div class="modal-header">
										<h5 class="modal-title" id="exampleModalLongTitle">
											لیست ناحیه ها (<%= city.region.length %> ناحیه)
										</h5>
										<button type="button" class="close modal-close" data-dismiss="modal"
											aria-label="Close">
											<span aria-hidden="true">&times;</span>
										</button>
									</div>
									<div class="large-modal-body modal-body">
										<table
											class="table table-bordered table-striped display responsive nowrap dt-center table-mini">
											<% if(city.region.length > 0) { %>
											<thead>
												<tr>
													<th>عنوان</th>
												</tr>
											</thead>
											<tbody>
												<% city.region.forEach(region => { %>
												<tr>
													<td><%= region.title %></td>
												</tr>
												<% }); %>
											</tbody>
											<% } else { %>
											<img src="/images/no-data.jpg" />
											<% } %>
										</table>
									</div>
								</div>
							</div>
						</div>
					</td>
					<td>
						<% if(city.condition == true) { %>
						<form action="/admin/location/city/condition/false/<%= city._id %>?_method=PUT" method="post">
							<input type="hidden" name="_csrf" value="<%= req.csrfToken() %>" />
							<div class="btn-group btn-group-sm">
								<button type="submit" class="btn btn-success">
									فعال
								</button>
							</div>
						</form>
						<% } else { %>
						<form action="/admin/location/city/condition/true/<%= city._id %>?_method=PUT" method="post">
							<input type="hidden" name="_csrf" value="<%= req.csrfToken() %>" />
							<div class="btn-group btn-group-sm">
								<button type="submit" class="btn btn-danger">
									غیر فعال
								</button>
							</div>
						</form>
						<% } %>
					</td>
					<td>
						<form action="/admin/location/city/<%= city._id %>?_method=DELETE" method="post">
							<input type="hidden" name="_csrf" value="<%= req.csrfToken() %>" />
							<div class="btn-group btn-group-sm">
								<a href="#" class="btn btn-primary" data-toggle="modal"
									data-target="#editModal_<%= city._id %>">
									ویرایش
								</a>
								<button type="submit" class="btn btn-danger">
									حذف
								</button>
							</div>
						</form>

						<!--? Edit City Modal -->
						<div class="modal fade" id="editModal_<%= city._id %>" tabindex="-1" role="dialog"
							aria-labelledby="exampleModalLabel" aria-hidden="true">
							<div class="modal-dialog modal-dialog-centered" role="form">
								<div class="modal-content">
									<div class="modal-header">
										<h5 class="modal-title" id="exampleModalLabel">ویرایش شهر</h5>
										<button type="button" class="close modal-close" data-dismiss="modal"
											aria-label="Close">
											<span aria-hidden="true">&times;</span>
										</button>
									</div>
									<div class="modal-body">
										<form action="/admin/location/city/edit/<%= city._id %>?_method=PUT"
											method="POST">
											<input type="hidden" name="_csrf" value="<%= req.csrfToken() %>" />
											<div class="form-group">
												<label for="recipient-name" class="col-form-label">
													عنوان
												</label>
												<input type="text" name="title" class="form-control" id="recipient-name"
													value="<%= city.title %>" />
											</div>
											<button type="submit" class="btn btn-warning">ویرایش</button>
											<button type="button" class="btn btn-danger" data-dismiss="modal">
												بستن
											</button>
										</form>
									</div>
								</div>
							</div>
						</div>
						<!--! Edit City Modal -->
					</td>
				</tr>
				<% }) %>
			</tbody>
		</table>
	</div>
	<!--! Card Body -->
</section>

<% contentFor('script') %>
<script src="/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="/plugins/datatables/dataTables.bootstrap4.js"></script>
<script src="/js/datatables.js"></script>

<script>
	datatable('#table', [], [{ orderable: false, targets: [1, 2, 3] }]);
</script>