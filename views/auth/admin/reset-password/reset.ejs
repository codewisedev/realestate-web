<% contentFor('style') %>
<link rel="stylesheet" href="/css/admin-auth.css" />

<% contentFor('body') %>
<div class="limiter">
	<div class="container-login">
		<div class="wrap-login">
			<div class="login-form-title">
				<span class="login-form-title-text">
					تغییر رمز عبور
				</span>
			</div>

			<form class="login-form validate-form" role="form" method="POST" action="/auth/admin/password/reset"
				novalidate>
				<input type="hidden" name="_csrf" value="<%= req.csrfToken() %>" />

				<%- include(viewPath('layouts/errors')) -%>

				<input type="hidden" name="token" value="<%= token %>" />

				<div class="wrap-input validate-input margin-bottom" data-validate="لطفا ایمیل خود را وارد نمایید">
					<input class="input input-ltr" id="email" type="email" name="email" placeholder="ایمیل"
						value="<%= complete('email') %>" />
					<span class="focus-input"></span>
				</div>

				<div class="input-group wrap-input validate-input margin-bottom">
					<div class="input-group-prepend">
						<span style="cursor: pointer;" class="input-group-text formObject"><i toggle="#password"
								class="fa fa-fw fa-eye-slash field-icon toggle-password"></i></span>
					</div>
					<input id="password" name="password" type="password" class="form-control formObject input input-ltr"
						placeholder="رمز عبور *" value="<%= complete('password') %>" dir="ltr" />
					<span class="focus-input"></span>
				</div>

				<div class="input-group wrap-input validate-input margin-bottom">
					<div class="input-group-prepend">
						<span style="cursor: pointer;" class="input-group-text formObject"><i toggle="#repeatPassword"
								class="fa fa-fw fa-eye-slash field-icon toggle-password"></i></span>
					</div>
					<input id="repeatPassword" name="repeatPassword" type="password"
						class="form-control formObject input input-ltr" placeholder="تکرار رمز عبور *"
						value="<%= complete('repeatPassword') %>" dir="ltr" />
					<span class="focus-input"></span>
				</div>

				<div class="form-group">
					<%- recaptcha %>
				</div>

				<div class="container-login-form-btn">
					<button type="submit" class="login-form-btn" style="color: white;">
						تغییر رمز
					</button>
				</div>
			</form>
		</div>
	</div>
</div>

<% contentFor('script') %>
<script>
	$('.toggle-password').click(function () {
		$(this).toggleClass('fa-eye fa-eye-slash');
		var input = $($(this).attr('toggle'));
		if (input.attr('type') == 'password') {
			input.attr('type', 'text');
		} else {
			input.attr('type', 'password');
		}
	});
</script>