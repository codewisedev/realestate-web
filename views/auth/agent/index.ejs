<% contentFor('style') %>
<link rel="stylesheet" type="text/css" href="/plugins/animate.css/animate.css" />
<link rel="stylesheet" type="text/css" href="/plugins/hamburgers/hamburgers.min.css" />
<link rel="stylesheet" type="text/css" href="/css/util.css" />
<link rel="stylesheet" type="text/css" href="/css/agent-auth.css" />

<% contentFor('body') %>
<!--? Main -->
<section class="limiter">
	<div class="container-login">
		<%- include(viewPath('layouts/errors')) -%>
		<div class="wrap-login">
			<div class="login-pic js-tilt" data-tilt>
				<img src="/images/auth.png" alt="IMG" />
			</div>

			<!--? Login -->
			<div id="login" class="animated">
				<span class="login-form-title">ورود</span>
				<form class="login-form" action="/auth/agent/login" role="form" method="POST">
					<input type="hidden" name="_csrf" value="<%= req.csrfToken() %>" />
					<div class="wrap-input validate-input">
						<div class="wrap-input validate-input">
							<input type="text" id="mobile" name="mobile" class="form-control input"
								data-inputmask='"mask": "0999 99 99 999"' data-mask dir="ltr"
								value="<%= complete('mobile') %>" />
							<span class="focus-input"></span>
							<span class="symbol-input">
								<i class="fa fa-phone" aria-hidden="true"></i>
							</span>
						</div>
						<span class="focus-input"></span>
						<span class="symbol-input">
							<i class="fa fa-phone" aria-hidden="true"></i>
						</span>
					</div>
					<div class="wrap-input validate-input" data-validate="رمز عبور را وارد کنید">
						<input type="password" name="password" class="form-control input" dir="ltr"
							value="<%= complete('password') %>" />
						<span class="focus-input"></span>
						<span class="symbol-input">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
					</div>
					<div class="container-login-form-btn">
						<button class="login-form-btn">ورود</button>
					</div>
					<div class="text-center p-t-12">
						<a class="txt2" href="/auth/agent/password/reset">فراموشی رمز عبور؟</a>
					</div>
				</form>
				<div class="text-center p-t-136">
					<a class="txt2 show" href="#">
						ساخت حساب کاربری
						<i class="fa fa-long-arrow-left m-l-5" aria-hidden="true"></i>
					</a>
				</div>
			</div>
			<!--! Login -->

			<!--? Register -->
			<div id="register" class="animated" hidden>
				<span class="login-form-title">ثبت نام</span>
				<form class="login-form" action="/auth/agent/sendcode" role="form" method="POST">
					<input type="hidden" name="_csrf" value="<%= req.csrfToken() %>" />
					<select class="form-control" style="margin-bottom: 15px;" name="type">
						<option value="1">املاکی</option>
						<option value="2">مشاور</option>
					</select>
					<div class="wrap-input validate-input">
						<input type="text" id="mobile" name="mobile" class="form-control input"
							data-inputmask='"mask": "0999 99 99 999"' data-mask dir="ltr"
							value="<%= complete('mobile') %>" />
						<span class="focus-input"></span>
						<span class="symbol-input">
							<i class="fa fa-phone" aria-hidden="true"></i>
						</span>
					</div>
					<input type="submit" class="login-form-btn" value="ثبت نام" />
				</form>
				<div class="text-center p-t-136">
					<a class="txt2 hide" href="#">
						فرم ورود
						<i class="fa fa-long-arrow-left m-l-5" aria-hidden="true"></i>
					</a>
				</div>
			</div>
			<!--! Register -->
		</div>
	</div>
</section>
<!--! Main -->

<% contentFor('script') %>
<script src="/plugins/input-mask/jquery.inputmask.js"></script>
<script src="/plugins/input-mask/jquery.inputmask.date.extensions.js"></script>
<script src="/plugins/input-mask/jquery.inputmask.extensions.js"></script>
<script src="/plugins/tilt/tilt.jquery.min.js"></script>
<script>
	$('.js-tilt').tilt({
		scale: 1.1,
	});
	$('[data-mask]').inputmask();
</script>
<script src="/js/agent-auth.js"></script>